    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const loadingScreen = document.getElementById('loading-screen');
            loadingScreen.style.display = 'none'; // Ø¥Ø®ÙØ§Ø¡ Ø´Ø§Ø´Ø© Ø§Ù„ØªØ­Ù…ÙŠÙ„ Ø¨Ù…Ø¬Ø±Ø¯ ØªØ­Ù…ÙŠÙ„ Ø§Ù„ØµÙØ­Ø©

            const mainRoom = document.getElementById('main-room');
            const emotionsRoom = document.getElementById('emotions-room');
            const healthRoom = document.getElementById('health-room');
            const intimacyRoom = document.getElementById('intimacy-room');

            function showRoom(roomToShow) {
                mainRoom.setAttribute('visible', 'false');
                emotionsRoom.setAttribute('visible', 'false');
                healthRoom.setAttribute('visible', 'false');
                intimacyRoom.setAttribute('visible', 'false');
                roomToShow.setAttribute('visible', 'true');
            }

            // Ø§Ù„Ø§Ø³ØªÙ…Ø§Ø¹ Ù„Ù„Ù†Ù‚Ø± Ø¹Ù„Ù‰ Ø§Ù„Ø¨ÙˆØ§Ø¨Ø§Øª
            document.getElementById('emotions-gate').addEventListener('click', () => showRoom(emotionsRoom));
            document.getElementById('health-gate').addEventListener('click', () => showRoom(healthRoom));
            document.getElementById('intimacy-gate').addEventListener('click', () => showRoom(intimacyRoom));
            
            // Ø£Ø²Ø±Ø§Ø± Ø§Ù„Ø±Ø¬ÙˆØ¹
            document.getElementById('back-emotions').addEventListener('click', () => showRoom(mainRoom));
            document.getElementById('back-health').addEventListener('click', () => showRoom(mainRoom));
            document.getElementById('back-intimacy').addEventListener('click', () => showRoom(mainRoom));
        });
