import { sql } from '@vercel/postgres';

export default async function handler(request, response) {
    
    // 1. معالجة طلبات OPTIONS و CORS (نفس منطق كود الحذف الفعال)
    if (request.method === 'OPTIONS') {
        response.setHeader('Access-Control-Allow-Origin', '*'); 
        response.setHeader('Access-Control-Allow-Methods', 'DELETE, OPTIONS'); 
        response.setHeader('Access-Control-Allow-Headers', 'Content-Type'); 
        response.status(200).end(); 
        return;
    }
    
    response.setHeader('Access-Control-Allow-Origin', '*');

    // 2. التحقق من أن الطريقة هي DELETE
    if (request.method !== 'DELETE') {
        return response.status(405).json({ error: 'Method Not Allowed, use DELETE' });
    }

    try {
        const { id } = request.query;

        if (!id) {
            return response.status(400).json({ error: 'Missing required field (id)' });
        }
        
        // 3. تنفيذ استعلام الحذف من جدول notifications باستخدام المعرف id
        // ملاحظة: تم تغيير اسم الجدول من posts إلى notifications ليناسب الإشعارات
        const result = await sql`
            DELETE FROM notifications
            WHERE id = ${id};
        `;
        
        if (result.rowCount === 0) {
             return response.status(404).json({ message: `Notification with ID ${id} not found.` });
        }

        return response.status(200).json({ success: true, message: `Notification deleted successfully.` });

    } catch (error) {
        console.error('Database Delete Error:', error);
        return response.status(500).json({ error: 'Failed to delete notification.', details: error.message });
    }
}
