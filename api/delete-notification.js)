import { sql } from '@vercel/postgres';

export default async function handler(request, response) {
    // إعدادات CORS للسماح بطريقة DELETE
    if (request.method === 'OPTIONS') {
        response.setHeader('Access-Control-Allow-Origin', '*');
        response.setHeader('Access-Control-Allow-Methods', 'DELETE, OPTIONS');
        response.setHeader('Access-Control-Allow-Headers', 'Content-Type');
        return response.status(200).end();
    }
    response.setHeader('Access-Control-Allow-Origin', '*');

    if (request.method !== 'DELETE') {
        return response.status(405).json({ error: 'يجب استخدام DELETE' });
    }

    try {
        const { id } = request.query;
        if (!id) return response.status(400).json({ error: 'المعرف مفقود' });

        // استخدام sql للربط المباشر بـ POSTGRES_URL 
        const result = await sql`DELETE FROM notifications WHERE id = ${id};`;

        if (result.rowCount === 0) return response.status(404).json({ error: 'غير موجود' });

        return response.status(200).json({ success: true });
    } catch (error) {
        return response.status(500).json({ error: error.message });
    }
} 
