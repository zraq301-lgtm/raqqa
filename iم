        async function fetchFromNeonDB() {
            try {
                // Ø§Ø³ØªØ¨Ø¯Ù„ Ù‡Ø°Ø§ Ø§Ù„Ø±Ø§Ø¨Ø· Ø¨Ø±Ø§Ø¨Ø· Ø§Ù„Ù€ API Ø§Ù„Ø®Ø§Øµ Ø¨Ùƒ ÙÙŠ Vercel/Neon
                const response = await fetch('https://YOUR_VERCEL_PROJECT.vercel.app/api/get-content');
                const data = await response.json();
                
                // ØªÙˆØ²ÙŠØ¹ Ø§Ù„Ø¨ÙŠØ§Ù†Ø§Øª Ø¹Ù„Ù‰ Ø§Ù„Ø­Ø§ÙˆÙŠØ§Øª Ø¨Ù†Ø§Ø¡Ù‹ Ø¹Ù„Ù‰ Ø§Ù„Ù‚Ø³Ù… (Category)
                data.forEach(item => {
                    const container = document.getElementById(`content-container-${item.section}`);
                    if (container) {
                        const post = document.createElement('div');
                        post.className = 'card';
                        post.style.padding = '10px';
                        post.style.fontSize = '0.9rem';
                        post.innerHTML = `<strong>${item.title}</strong><p>${item.content}</p>`;
                        container.appendChild(post);
                    }
                });
            } catch (error) {
                console.error("Ø®Ø·Ø£ ÙÙŠ Ø¬Ù„Ø¨ Ø§Ù„Ø¨ÙŠØ§Ù†Ø§Øª:", error);
            }
        }

